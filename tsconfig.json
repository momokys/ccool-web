{
	"compilerOptions": {                  
		"target": "esnext" ,
		"module": "esnext" ,
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"] ,
		"allowJs": true,                       
		"checkJs": true,                       
		"jsx": "preserve" ,
		"strict": true ,
		"moduleResolution": "node" ,
		"baseUrl": "./packages" ,
		"paths": {
			"@/*": ["admin/src/*"]
		},
		"types": ["vite/client"] ,
		"allowSyntheticDefaultImports": true ,
		"esModuleInterop": true ,
		"experimentalDecorators": true ,
		"skipLibCheck": true ,
		"forceConsistentCasingInFileNames": true 
	},
	"exclude": [
		"node_modules",
		"dist",
		"src/assets/**",
    "**/*.js"
	]
}
